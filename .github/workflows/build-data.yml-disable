name: Build Data (Issues → data/*)

on:
  push:
    branches: [ main ]
  issues:
    types: [opened, edited, closed, reopened]
  workflow_dispatch:

permissions:
  contents: write

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: 20
          # cache: npm   # Lock dosyası yoksa cache anlamlı değil; istersen açık bırakma

      - name: Create package.json if missing (sadece ilk kurulum için)
        run: |
          if [ ! -f package.json ]; then
            cat > package.json <<'JSON'
            {
              "name": "meal2",
              "private": true,
              "type": "module",
              "scripts": {
                "build:data": "node scripts/build-from-issues.mjs"
              },
              "dependencies": {
                "octokit": "^4.0.2"
              }
            }
            JSON
          fi

      - name: Install deps (no lock)
        run: npm install --no-audit --no-fund

      - name: Build JSON from Issues
        env:
          GITHUB_REPOSITORY: ${{ github.repository }}
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        run: node scripts/build-from-issues.mjs

      - name: Commit data/*
        uses: stefanzweifel/git-auto-commit-action@v5
        with:
          commit_message: "build: update data/* from issues"
          file_pattern: data/**
